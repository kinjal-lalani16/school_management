<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="peoject_form_view" model="ir.ui.view">
        <field name="name">project.form.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options_active']" position="after">
                <div>
                    <label for="create_date" class="oe_inline" string="Create date: "/>
                    <field name="create_date" class="oe_inline oe_input_align"/>
                </div>
                <div>
                    <label for="end_day" class="oe_inline" string="End date: "/>
                    <field name="end_day" class="oe_inline oe_input_align"/>
                </div>
                <div>
                    <label for="number_of_days" class="oe_inline" string="Days: "/>
                    <field name="number_of_days" class="oe_inline oe_input_align"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
