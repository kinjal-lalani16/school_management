<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="job_details" name="Job Details">
    <t t-call="website.layout">
      <div class="oe_structure">
        <div class="container">
          <br/>
          <center>
            <h3>Job application</h3>
          </center>
          <br/>
          <table class="table-striped table">
            <thead style="font-size: 23px;">
              <tr>
                <h6>
                  <b>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>
                      <b>Designation</b>
                    </th>
                  </b>
                </h6>
              </tr>
            </thead>
            <tbody>
              <t t-as="job" t-foreach="details">
                <tr>
                  <td>
                    <span t-esc="job.name"/>
                  </td>
                  <td>
                    <span t-esc="job.phone"/>
                  </td>
                  <td>
                    <span t-esc="job.email"/>
                  </td>
                  <td>
                    <span t-esc="job.designation_id.name"/>
                  </td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </div>
    </t>
  </template>
  <template id="job_designation" name="Desigantion">
    <t t-call="website.layout">
      <div class="oe_structure">
        <div class="container">
          <br/>
          <center>
            <h3>Designation</h3>
          </center>
          <br/>
          <table class="table-striped table">
            <thead style="font-size: 23px;">
              <tr>
                <h6>
                  <b>
                    <th>Designation</th>
                  </b>
                </h6>
              </tr>
            </thead>
            <tbody>
              <t t-as="des" t-foreach="des_details">
                <tr>
                  <td>
                    <a t-attf-href="/designation/#{slug(des)}">
                      <t t-esc="des.name"/>
                    </a>
                  </td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </div>
    </t>
  </template>
  <template id="create_form">
    <t t-call="website.layout">
      <t t-set="additional_title">Application Details</t>
      <form action="/create_job_application" method="post">
        <input name="designation_id" t-att-value="job" type="hidden"/>
        <input name="csrf_token" t-att-value="request.csrf_token()" type="hidden"/>
        <div class="col-lg-12">
          <div class="alert alert-danger" role="alert" t-if="error_message">
            <t t-as="err" t-foreach="error_message">
              <t t-esc="err"/>
              <br/>
            </t>
          </div>
        </div>
        <div id="wrap">
          <div class="or_structure">
            <div class="container">
              <div class="col-xl-12">
                <div t-attf-class="form-group #{error.get('name') and 'o_has_error' or ''} col-xl-6">
                  <label class="col-form-label" for="name">Name</label>
                  <span>*</span>
                 <input type="text" name="name" t-attf-class="form-control #{error.get('name') and 'is-invalid' or ''}" t-att-value="name" />
                </div>
                <div t-attf-class="form-group #{error.get('email') and 'o_has_error' or ''} col-xl-6">
                  <label class="col-form-label" for="email">Email</label>
                  <input type="email" name="email" t-attf-class="form-control #{error.get('email') and 'is-invalid' or ''}" t-att-value="email" />
                </div>
                <div t-attf-class="form-group #{error.get('phone') and 'o_has_error' or ''} col-xl-6">
                  <label class="col-form-label" for="email">Mobile No</label>
                  <input type="tel" name="phone" t-attf-class="form-control #{error.get('phone') and 'is-invalid' or ''}" t-att-value="phone"/>
                </div>
                <div class="col-xl-4">
                  <button class="btn btn-primary float-right mb32 " type="submit">Confirm


                    <span class="fa fa-long-arrow-right"/></button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </t>
  </template>
